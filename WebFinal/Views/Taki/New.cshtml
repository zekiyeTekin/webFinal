@model WebFinal.Service.ViewModel.TakiViewModel

@{
    ViewData["Title"] = "New";
}

<h1 class="col-md-4 offset-4">Yeni Aksesuar Ekle</h1>
<hr/>

<div class="col-md-10 mx-auto py-4">
    <div class="row">
       
        <div class="col-md-4 offset-4">
            <form enctype="multipart/form-data" asp-action="New">
                <div class="row">
                   
                        <div class="form-group">
                            <label asp-for="TakiAd" class="control-label"></label>
                        <input asp-for="TakiAd" class="form-control framed" />
                            <span asp-validation-for="TakiAd" class="text-danger"></span>
                        </div>
                    
                    
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control framed" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                   
                    
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control framed" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>


                    <div class="mt-2 mb-2 form-group">
                            <label asp-for="ProfileImage" class="control-label"></label>
                        <div class="mb-2 custom-file">
                            <input asp-for="ProfileImage" class="custom-file-input framed" id="customFile">
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                            <span asp-validation-for="ProfileImage" class="text-danger"></span>
                        </div>
                   
                
                </div>
              
                <div class="form-group ">
                    <input type="submit" value="Kaydet" style=" background-color: RoyalBlue; border-radius: 8px;" class="btn btn-primary raise " />
                </div>
            </form>
        </div>
    </div>
</div>
@*textleri büyük harf yapmak için text-uppercase yapabilirsin classına*@
<p >   
    <a asp-action="Index" style=" background-color: RoyalBlue; border-radius: 8px;" class="btn btn-sm btn-primary rounded-40 raise"><i class="fas fa-fast-backward "></i> Listeye Geri Dön</a>
</p>


@section scripts{
    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 