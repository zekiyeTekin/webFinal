<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebFinal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebFinal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" asp-append-version="true" />
</head>
<body>
    <header >
      
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div style="background-color: #f5f5f5" class="container-fluid">
             @*   <a class="navbar-brand " asp-area="" asp-controller="Home" asp-action="Index">WebFinal</a>*@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark cerceve" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house me-2"></i>Ana Sayfa</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark cerceve" asp-area="" asp-controller="Taki" asp-action="Index"><i class="fa-solid fa-gem me-2"></i>Aksesuarlar</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark cerceve" asp-area="" asp-controller="Category" asp-action="Index"><i class="fa-solid fa-plus-minus me-2"></i>Kategoriler</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark cerceve" asp-area="" asp-controller="Giyim" asp-action="Index"><i class="fa-solid fa-shirt me-2"></i>Giyimler</a>
                        </li>
                        

                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark cerceve" asp-area="" asp-controller="Admin" asp-action="Index">
                                        <i class="fa-solid fa-users me-2"></i>
                                        Kayıtlı Kullanıcılar</a>
                                </li>
                            }

                            <li class="nav-item ms-auto">
                                <a class="nav-link text-dark raise framed" asp-area="" asp-controller="Account" asp-action="Profile">
                                    <i class="fa-solid fa-user me-2"></i>
                                @User.FindFirst("Username").Value    
                                </a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link text-dark raise framed" asp-area="" asp-controller="Account" asp-action="Logout"><i class="fa-solid fa-right-from-bracket"></i>Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-auto ">
                                <a class="nav-link text-dark raise framed " asp-area="" asp-controller="Account" asp-action="Login"><i class="fa-solid fa-right-to-bracket me-2"></i>Login</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link text-dark raise framed" asp-area="" asp-controller="Account" asp-action="Register"><i class="fa-solid fa-user-plus me-2"></i>Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
       
  @* css özelliklerini ilk buraya yazdım*@
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="footer  text-muted">
        @* border-top özelliği vardı*@
        <div class="container text-center ">
            &copy; 2023 - WebFinal - ZEKİYE TEKİN @*- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
