@model WebFinal.Service.Models.Category

@{
    ViewData["Title"] = "Create";
}


<h1 class="col-md-4 offset-4">Yeni Kategori Ekle</h1>
<hr />

<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label "></label>
                <input asp-for="Name" class="form-control framed" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 d-flex justify-content-end ">
                <input type="submit" value="Kaydet" style=" background-color: RoyalBlue; border-radius: 8px;" class=" btn btn-primary raise" />
            </div>
        </form>
    </div>
</div>



<p>
    <a asp-action="Index" style=" font-family: 'Carter One'; background-color: RoyalBlue; border-radius: 8px;" class="btn btn-sm btn-primary rounded-40 raise"><i class="fas fa-fast-backward "></i> Listeye Geri Dön</a>
</p>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
 